#:kivy 1.1.0
<SetupScreen>:
    BoxLayout:
        size: root.size
        pos: root.size
        orientation: "horizontal"
        Label:
            text: "test"
<CheckNoise>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_press: 
                    root.select(filechooser.path, filechooser.selection)
                on_release: root.cancel()
