<newSet>:
    BoxLayout:
        padding: [2,2,2,10]
        spacing: 2
        orientation: 'vertical'
        Label:
            font_size: 50
            text: "New video setup"
        Button:
            pos_hint: {'center_x': .9, 'center_y': .5}
            size_hint: None, None
            size: 250,50
            size_hint: .2, .1
            text: "show coordinate"
            on_press: root.show_coor()
        BoxLayout:
            padding: [2,2,2,10]
            spacing: 2
            orientation: 'horizontal'
            BoxLayout:
                padding: [2,2,2,10]
                spacing: 2
                orientation: 'vertical'
                Label:
                    font_size: 12
                    text: "Noise location x"
                Label:
                    font_size: 12
                    text: "Noise location y"
            BoxLayout:
                padding: [2,2,2,10]
                spacing: 2
                orientation: 'vertical'
                TextInput:
                    id: noise_loc_x
                    multiline:False
                    font_size: 12
                TextInput:
                    id: noise_loc_y
                    multiline:False
                    font_size: 12
            BoxLayout:
                padding: [2,2,2,10]
                spacing: 2
                orientation: 'vertical'
                BoxLayout:
                    padding: [2,2,2,10]
                    spacing: 2
                    orientation: 'horizontal'
                    CheckBox:
                        on_active:
                    Label:
                        font_size: 12
                        text: "Horizontal Top"  
                BoxLayout:
                    padding: [2,2,2,10]
                    spacing: 2
                    orientation: 'horizontal'
                    CheckBox:
                        on_active:
                    Label:
                        font_size: 12
                        text: "Horizontal Bottom"
            BoxLayout:
                padding: [2,2,2,10]
                spacing: 2
                orientation: 'vertical'
                Label:
                    font_size: 12
                    text: " Vertical Left"
                CheckBox:
                    on_active:
                Label:
                    font_size: 12
                    text: "Vertical Right"
                CheckBox:
                    on_active:
        Label:
            font_size: 10
            text: "...v0.0...dd/mm/yy..."
